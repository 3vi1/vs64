{
	"env": {
		"browser": false,
		"commonjs": true,
        "es2022": true,
		"node": true,
		"mocha": true
	},
	"parserOptions": {
        "ecmaFeatures": {
			"jsx": true
		},
		"sourceType": "module"
	},
	"rules": {
		"no-const-assign": "warn",
		"no-this-before-super": "warn",
		"no-undef": "warn",
		"no-unreachable": "warn",
		"no-unused-vars": [
			"warn", {
				"vars": "all",
				"varsIgnorePattern": "^_.*_$",
				"args": "after-used",
				"argsIgnorePattern": "^_",
				"ignoreRestSiblings": false
			}
		],
		"constructor-super": "warn",
		"valid-typeof": "warn"
	}
}
