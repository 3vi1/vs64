{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Extension",
            "type": "extensionHost",
            "request": "launch",
            //"runtimeExecutable": "${execPath}",
            "args": [
                "--trace-deprecation",
                "--extensionDevelopmentPath=${workspaceFolder}",
            ]
        },
        {
            "name": "Run Modules",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/test/runners/elf.run.js",
            "cwd": "${workspaceFolder}/test"
        },
        {
            "name": "Run Resource Compiler",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/tools/rc.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "args": [
                "--format", "kick",
                "--config", "${workspaceFolder}/test/project-config.json",
                "--output", "${workspaceFolder}/test/temp/build/out.asm",
                "${workspaceFolder}/test/data/wave_mono.wav"
            ]
        },
        {
            "name": "Run Unit Tests",
            "type": "node",
            "request": "launch",
            "console": "integratedTerminal",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
            "cwd": "${workspaceFolder}",
            "args": [
                "--runInBand",
                "--config",
                "${workspaceFolder}/test/jest.config.js",
                "-t", "project"
            ]
        },
        {
            "name": "Run Extension Tests",
            "type": "extensionHost",
            "request": "launch",
            //"runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}",
                "--extensionTestsPath=${workspaceFolder}/test"
            ]
        }
    ]
}
