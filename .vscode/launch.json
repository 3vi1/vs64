{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Extension",
            "type": "extensionHost",
            "request": "launch",
            //"runtimeExecutable": "${execPath}",
            "args": [
                "--trace-deprecation",
                "--extensionDevelopmentPath=${workspaceFolder}",
            ]
        },
        {
            "name": "Run Modules",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/test/runners/language.run.js",
            "cwd": "${workspaceFolder}/test"
        },
        {
            "name": "Run Resource Compiler",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/tools/rc.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "args": [
                "--format", "cpp",
                "--config", "${workspaceFolder}/test/project-config.json",
                "--output", "${workspaceFolder}/test/temp/build/out.cpp",
                "${workspaceFolder}/test/data/koala.kla"
            ]
        },
        {
            "name": "Run Basic Compiler",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/tools/bc.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "args": [
                "--map", "${workspaceFolder}/test/temp/build/out.bmap",
                "--verbose",
                "--include", "${workspaceFolder}/test/data",
                "-I", "${workspaceFolder}/test/temp",
                "--output", "${workspaceFolder}/test/temp/build/out.prg",
                //"${workspaceFolder}/test/temp/build/out.bas"
                "${workspaceFolder}/test/data/main.bas"
            ]
        },
        {
            "name": "Run Basic Unpacker",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/tools/bc.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "args": [
                "--unpack",
                "--verbose",
                "--output", "${workspaceFolder}/test/temp/build/out.bas",
                "D:/Temp/tsb/examples/sokoban 1.1.prg"
                //"${workspaceFolder}/test/temp/build/out.prg"
            ]
        },
        {
            "name": "Run Unit Tests",
            "type": "node",
            "request": "launch",
            "console": "integratedTerminal",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
            "cwd": "${workspaceFolder}",
            "args": [
                "--runInBand",
                "--config",
                "${workspaceFolder}/test/jest.config.js",
                "-t", "language"
            ]
        },
        {
            "name": "Run Extension Tests",
            "type": "extensionHost",
            "request": "launch",
            //"runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}",
                "--extensionTestsPath=${workspaceFolder}/test"
            ]
        }
    ]
}
